<div class="container">
  <h3>User : </h3>
  <div class="card">
    <h1><%= @user.first_name %> <%= @user.last_name.upcase %></h1>
    <p>
      <h4><%= @user.description %></h4>
    </p>
    <p>
      <h4><%= @user.email %></h4>
    </p>
    <p>
      <h4><%= @user.age %> ans</h4>
    </p>
    <p>
      <h4><%= @user.city.name %></h4>
    </p>
  </div>
  <button type="button" class="btn btn-danger"><%= link_to 'City', city_path(@user.city.id) %></button>
</div>

  <!-- Affiche la liste des gossip du User-->
  
<div class="container">
  <% @user_gossip = @user.gossips %>
  <h3>List des gossip de <%= @user.first_name %> : </h3>
  <div class="row">
    <% @user_gossip.each do |user_gossip| %>
      <div class="col-sm-6 col-md-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= user_gossip.title %></h5>
            <p class="card-text"><%= user_gossip.content %></p>
            <p class="card-text"><%= user_gossip.created_at %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <button type="button" class="btn btn-danger"><%= link_to 'Home', root_path %></button>
</div>
  


